<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Degradado de arriba hacia abajo -->
    <gradient
        android:startColor="#00897B"
        android:endColor="#26A69A"
        android:angle="270" />

    <!-- Esquinas redondeadas (12dp) -->
    <corners android:radius="12dp" />

    <!-- Borde muy ligero -->
    <stroke
        android:width="1dp"
        android:color="#00695C" />

    <!-- Padding interno (opcional) para que el texto no quede pegado -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
